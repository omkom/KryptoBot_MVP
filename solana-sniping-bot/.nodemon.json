{
  "verbose": true,
  "ignore": [
    "node_modules/",
    ".git/",
    "logs/",
    "*.test.js",
    "Dockerfile*",
    "docker compose*.yml"
  ],
  "watch": [
    "service/src/",
    "shared/"
  ],
  "ext": "js,json",
  "delay": "500",
  "env": {
    "NODE_ENV": "development"
  },
  "execMap": {
    "js": "node -r dotenv/config"
  }
}